@model CommerceBankApp.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentId" />
            <div class="form-group">
                <label asp-for="DonatedAmount" class="control-label"></label>
                <input asp-for="DonatedAmount" class="form-control" />
                <span asp-validation-for="DonatedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationID" class="control-label"></label>
                <select asp-for="OrganizationID" class="form-control" asp-items="ViewBag.OrganizationID"></select>
                <span asp-validation-for="OrganizationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentInfoId" class="control-label"></label>
                <select asp-for="PaymentInfoId" class="form-control" asp-items="ViewBag.PaymentInfoId"></select>
                <span asp-validation-for="PaymentInfoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Delete" asp-route-id="@Model.PaymentId">Delete</a> | 
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
