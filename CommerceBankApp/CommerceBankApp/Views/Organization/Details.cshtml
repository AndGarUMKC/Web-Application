@model CommerceBankApp.Models.Organization

<center>
<h1>
    @Html.DisplayFor(model => model.organizationDescription)
    <small class="text-muted"></small>   <!-- NEED FOREIGN KEY FOR FUNDRAISER CREATOR -->
</h1>
</center>

<img src="@Html.DisplayFor(model => model.ImageUrl)" class="img-fluid" alt="Responsive Image" />

<p>
    @Html.DisplayFor(model => model.organizationDescription)
</p>


<div class="progress">   <!-- NEED AGGREGATE FUNCTION FOR CURRENT AMOUNT DONATED -->
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@Html.DisplayFor(model => model.Payment.Sum(x => x.donatedAmount))" aria-valuemin="0" aria-valuemax="@Html.DisplayFor(model => model.donationGoal)" style="width: 10%"></div>
</div>

<div class="form-group">   <!-- NEED LINK TO ADD DONATION -->
    <input type="submit" value="Create" class="btn btn-primary" />
</div>

