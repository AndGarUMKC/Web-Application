@model IEnumerable<CommerceBankApp.Models.DonorInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cardExpiration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cvcNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bankRoutingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bankAccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donor)
            </th>
            <th></th>
        </tr>
