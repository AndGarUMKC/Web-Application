@model CommerceBankApp.Models.PaymentInfo

@{
    ViewData["Title"] = "Create";
}
<br />
<h1>Credit Card</h1>
<h6>Save your credit card information, so you can donate to your favorite cause with ease!</h6>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-controller="PaymentInfo" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentInfoName" class="control-label"></label>
                <input asp-for="PaymentInfoName" class="form-control" />
                <span asp-validation-for="PaymentInfoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CvcNumber" class="control-label"></label>
                <input asp-for="CvcNumber" class="form-control" />
                <span asp-validation-for="CvcNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardExpiration" class="control-label"></label>
                <input asp-for="CardExpiration" class="form-control" />
                <span asp-validation-for="CardExpiration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <input asp-for="ApplicationUserId" class="form-control" value="@ViewBag.userid" />
            </div>

            <br />
            <button class="button-87" style="width: 94%" role="button">
                Create
            </button>

        </form>

    </div>
</div>

<button class="button-87" role="button" onclick="history.back()">
    Back
</button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
