@model CommerceBankApp.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="paymentID" />
            <div class="form-group">
                <label asp-for="donatedAmount" class="control-label"></label>
                <input asp-for="donatedAmount" class="form-control" />
                <span asp-validation-for="donatedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="donorID" class="control-label"></label>
                <select asp-for="donorID" class="form-control" asp-items="ViewBag.donorID"></select>
                <span asp-validation-for="donorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="organizationID" class="control-label"></label>
                <select asp-for="organizationID" class="form-control" asp-items="ViewBag.organizationID"></select>
                <span asp-validation-for="organizationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
